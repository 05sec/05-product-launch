---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSectionVue from "../components/HeroSection.vue";
import AboutSection from "../components/AboutSection.vue";
import Partner from "../components/train/Partner.vue";
import CompetitionSection from "../components/competition/CompetitionSection.vue";
import InfiniteScroll from "../components/InfiniteScroll.vue";
import TrainingSwiper from "../components/train/TrainingSwiper.vue";
import ContactUs from "../components/ContactUs.vue";
import PricingSection from "../components/PricingSection.vue";
---

<BaseLayout
  title="实训平台 - Training"
  description="实训平台是集课程培训、练习训练、技能考核等功能于一体的网络安全实战培训系统"
  forceHeaderIntersecting={true}
>
  <HeroSectionVue
    title="实训平台 Training"
    subTitle="网络安全实战培训系统"
    url="/main-page.webp"
    client:visible
  />

  <Partner client:visible/>

  <TrainingSwiper client:visible/>

  <PricingSection
    title="选择您的专属方案"
    subTitle="满足任何培训场景需求"
    gradientType="left"
    client:visible
  />

  <ContactUs client:visible gradientType="right" />

  <CompetitionSection client:visible/>

  <InfiniteScroll client:visible/>

</BaseLayout> 